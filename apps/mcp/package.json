{
  "name": "@th-chat/mcp",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "dotenvx run -- tsx --watch src/index.ts",
    "build": "tsdown",
    "type-check": "tsc --noEmit",
    "start": "dotenvx run -- node dist/index.js",
    "mastra:dev": "dotenvx run -- mastra dev",
    "db:generate": "dotenvx run -- drizzle-kit generate",
    "db:migrate": "dotenvx run -- drizzle-kit migrate",
    "db:push": "dotenvx run -- drizzle-kit push",
    "db:pull": "dotenvx run -- drizzle-kit pull",
    "db:studio": "dotenvx run -- drizzle-kit studio"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.15.0",
  "dependencies": {
    "@hono/node-server": "catalog:",
    "@hono/zod-validator": "catalog:",
    "@isaacs/ttlcache": "^1.4.1",
    "@modelcontextprotocol/sdk": "catalog:",
    "@t3-oss/env-core": "^0.13.8",
    "@valkey/valkey-glide": "^2.1.0",
    "ai": "catalog:",
    "bullmq": "^5.58.5",
    "consola": "^3.4.2",
    "destr": "^2.0.5",
    "drizzle-orm": "^0.44.5",
    "exit-hook": "^4.0.0",
    "go-go-try": "^6.2.0",
    "hono": "^4.9.8",
    "ioredis": "^5.7.0",
    "pg": "^8.16.3",
    "zod": "catalog:",
    "zodv3": "npm:zod@^3.25.76"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.49.0",
    "@repo/shared": "workspace:@th-chat/shared@*",
    "@repo/tsconfig": "workspace:@th-chat/tsconfig@*",
    "@types/node": "^24.5.2",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "tsdown": "^0.15.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts"
    },
    "./mcp": {
      "import": "./src/mcp/index.ts"
    }
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "import": "./dist/index.js",
        "types": "./dist/index.d.ts"
      },
      "./mcp": {
        "import": "./dist/mcp/index.js",
        "types": "./dist/mcp/index.d.ts"
      }
    }
  }
}
